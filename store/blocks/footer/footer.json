{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "title": "Footer - Desktop",
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "title": "Footer - Top",
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-bags"
    ],
    "props": {
      "blockClass": "footer-menu-row",
      "paddingTop": 6,
      "paddingBottom": 6
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "title": "Footer - Main",
    "children": ["accepted-payment-methods", "social-networks", "powered-by"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 6,
      "paddingBottom": 6
    }
  },
  "accepted-payment-methods": {
    "props": {
      "showInColor": true,
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },
  "social-networks": {
    "props": {
      "showInColor": true,
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },
  "powered-by": {
    "props": {
      "showInColor": true
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "title": "Footer - Bottom",
    "children": ["rich-text#footer-copyright"],
    "props": {
      "blockClass": "copyright"
    }
  },

  "footer-layout.mobile": {
    "title": "Footer - Mobile",
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "title": "Footer - Icons",
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "powered-by",
      "rich-text#footer-copyright"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-copyright": {
    "title": "Footer - copyright",
    "props": {
      "text": "© 2024 ClearChoicePantry Innovations. Todos os direitos reservados.\n *ClearChoicePantry* é uma marca registrada. Todas as imagens, textos, e conteúdos deste site são protegidos por leis de direitos autorais e propriedade intelectual.\n Qualquer reprodução, distribuição, ou uso não autorizado dos materiais presentes neste site é estritamente proibido sem o consentimento prévio por escrito de ClearChoicePantry Innovations.",
      "blockClass": "footer"
    }
  }
}
